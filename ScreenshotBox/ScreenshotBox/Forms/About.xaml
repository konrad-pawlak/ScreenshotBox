<Window x:Class="ScreenshotBox.Forms.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenshotBox.Forms"
        mc:Ignorable="d"
        Title="About" Height="300" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*" />
            <ColumnDefinition Width=".5*" />
        </Grid.ColumnDefinitions>
            <Image Margin="10" Source="/ScreenshotBox;component/Resources/appIcon.ico" />
        
        <StackPanel Height="auto" Grid.Column="1" VerticalAlignment="Center">
            <TextBlock FontFamily="Segoe UI Light" FontSize="40">ScreenshotBox</TextBlock>
            <TextBlock FontSize="14">0.3 (released 03.04.2018)</TextBlock>

            <TextBlock>Radkoncy</TextBlock>
            <TextBlock>
                <Hyperlink NavigateUri="http://radkoncy.wordpress.com" RequestNavigate="Hyperlink_RequestNavigate">
                    radkoncy.wordpress.com
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
